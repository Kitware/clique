.virtual-link
    cursor pointer

.noclick
    pointer-events none

.full-width
    width 100%

.space-right
    margin-right 5px

user-select(args...)
    -moz-user-select args
    -webkit-user-select args
    -ms-user-select args

.clique-panel
    user-select none

.clique-panel .panel-heading
    padding 3px

.clique-panel .panel-title
    font-size 14px
    color black

.clique-panel .panel-heading a
    text-decoration none

html, body
    height 100%

#content
    width 100%
    height 100%
    background-color aliceblue
    position fixed
    top 64px

mixin panel(panel_id, title)
    .panel-group(id=panel_id)&attributes(attributes)
        .panel.panel-default.clique-panel
            .panel-heading
                a(data-toggle="collapse", data-parent="#"+panel_id, href="#"+panel_id+"-content")
                    .panel-title
                        b= title
            .panel-collapse.collapse.in(id=panel_id+"-content")
                .panel-body
                    if block
                        block
                    else
                        p (intentionally blank)

doctype html
head
    title Clique

    script(src="https://code.jquery.com/jquery-1.11.2.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/backbone.js/1.1.2/backbone-min.js")
    script(src="http://d3js.org/d3.v3.min.js" charset="utf-8")
    script(src="http://marvl.infotech.monash.edu/webcola/cola.v3.min.js")

    link(rel="stylesheet" href="https://bootswatch.com/paper/bootstrap.min.css")
    link(rel="stylesheet" href="index.css")

    script(src="clique.js")
    script(src="index.js")

body
    nav.navbar.navbar-default
        .container
            .navbar-header
                a.navbar-brand Clique Demo

    .container.fill
        .col-md-9
            .row
                .col-md-12
                    svg(width="100%" height="825" style="background-color: aliceblue")#content
        .col-md-3
            .row
                .col-md-12
                    h4 Add neighborhood
                    .container
                        .row
                            .col-md-1 Name
                            .col-md-1 #[input#name]
                        .row
                            .col-md-1 Radius
                            .col-md-1 #[input#radius]
                        .row
                            .col-md-1
                                a.btn.btn-default#seed Query
            .row
                .col-md-12
                    h4 Node Info
                    #info
